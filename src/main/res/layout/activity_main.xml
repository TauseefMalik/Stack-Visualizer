<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pvg.uchiha.stack.MainActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_txtField"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_pop"
        android:layout_alignEnd="@+id/button_pop"
        android:layout_marginTop="56dp"
        android:layout_alignLeft="@+id/button_push"
        android:layout_alignStart="@+id/button_push"

        android:hint="Enter a value" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/push_string"
        android:id="@+id/button_push"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pop_string"
        android:id="@+id/button_pop"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:layout_alignTop="@+id/button_push"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stack_view"
        android:layout_below="@+id/input_txtField"
        android:layout_alignLeft="@+id/input_txtField"
        android:layout_alignStart="@+id/input_txtField"
        android:layout_marginTop="46dp"
        android:layout_above="@+id/button_push"
        android:layout_alignRight="@+id/button_pop"
        android:layout_alignEnd="@+id/button_pop" />


</RelativeLayout>
